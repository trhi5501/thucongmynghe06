@model DK_KhamBenh.Models.QlTaiKoan
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/Login_v1/images/icons/favicon.ico">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        
        <div class="container-login100">
            <div class="wrap-login100">

                <p class="login100-form-title" style="color: red"></p>
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/Login_v1/images/img-01.jpg" alt="IMG">
                </div>

                <form class="login100-form validate-form">
                    <span class="login100-form-title">
                        ĐĂNG NHẬP

                    </span>

                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()

                        <div class="wrap-input100 validate-input" data-validate="Vui Lòng nhập Tên Đăng Nhập ">
                            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "input100", @placeholder = "Tên Đăng Nhập", @autoforcus = "autoforcus" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Vui Lòng nhập Mật Khẩu">
                            @Html.TextBoxFor(model => model.MatKhau, new { @class = "input100", @placeholder = "Mật Khẩu", @Type = "Password" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </span>

                        </div>
                        <p style="background-color:red; color:aliceblue; text-align:center;">@ViewBag.Titl</p>
                    <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Đăng nhập
                            </button>

                        </div>
                    }


                    <div class="text-center p-t-136">
                        <span class="txt1">
                            Quên
                        </span>
                        <a class="txt2" href="#">
                            Tên đăng nhập / Mật khẩu?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Tạo tài khoản mới
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v1/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Login_v1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v1/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v1/js/main.js"></script>

</body>
</html>

